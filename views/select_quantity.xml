<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="select_qty_options" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('oe_product_image')]" position="inside">
            <div id="add_to_cart_product" contenteditable="false" data-oe-keep-contenteditable="" class="css_quantity input-group d-inline-flex me-2 mb-2 align-middle" style="float:right">
            <a class="btn btn-link js_add_cart_json" aria-label="Remove one" title="Remove one" href="#">
                <i class="fa fa-minus"/>
            </a>
            <input type="text" class="form-control quantity text-center" data-min="1" value="1" name="add_qty" title=""/>
            <a class="btn btn-link float_left js_add_cart_json" aria-label="Add one" title="Add one"  href="#">
                <i class="fa fa-plus"/>
            </a>
        </div>
        </xpath>
    </template>
</odoo>